#!/bin/sh
# setup language and keyboard from user settings

echo "[*] setup language environment"
if ! [ -e /etc/LANGUAGE ]; then
  echo "[!] /etc/LANGUAGE not present, run lost in babylon!"
else
  source /etc/LANGUAGE
fi

export LANG
export LC_ALL
echo " .  language: $LANG"
export KEYB
echo " .  keyboard layout: $KEYB"
setxkbmap -layout $KEYB

