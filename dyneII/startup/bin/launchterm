#!/bin/sh

PROG="`which zsh`"

if [ -z $1 ]; then
  TITLE="Terminal"
else 
  TITLE=$1

  shift

  if [ $1 ]; then
    PROG=$@
  fi

fi

launch \
mrxvt -tn xterm-color -bg black -fg white -T "$TITLE" \
      -tabfg lightgrey -itabfg darkgrey -tr -trm -trt -ss rxvt \
      -sr -bgfade 80 -fade 50 -bc -vb -e $PROG

